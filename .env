# API Gateway Port
PORT_GATEWAY=5000

# Microservices URLs
ADMIN_SERVICE=http://localhost:6000
BOOKING_SERVICE=http://localhost:6003
CAR_SERVICE=http://localhost:6002
RECLAMATION_SERVICE=http://localhost:6001
USER_SERVICE=http://localhost:6004

# Database URIs (Make sure these match your actual databases)
MONGO_URI_ADMIN=mongodb://localhost:27017/admindb
MONGO_URI_BOOKING=mongodb://localhost:27017/bookingdb
MONGO_URI_CAR=mongodb://localhost:27017/cardb
MONGO_URI_RECLAMATION=mongodb://localhost:27017/reclamationdb
MONGO_URI_USER=mongodb://localhost:27017/userdb

# JWT Authentication
JWT_SECRET=yourSuperSecretKey
JWT_EXPIRATION=15m  # Tokens expire in 15 minutes
JWT_REFRESH_SECRET=yourRefreshSecretKey
JWT_REFRESH_EXPIRATION=7d  # Refresh tokens last for 7 days

# Rate Limiting (Prevent Abuse)
RATE_LIMIT_WINDOW=15  # Window time in minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per IP within the window
